<h1 class="text-center mt-4">Alunos:</h1>

<div class="apple_pagination">
<div class="page_info">
    <%= page_entries_info @alunos %>
</div>
    <%= will_paginate @alunos, :container => false %>
</div>
<div class="container">
  <% @alunos.order(:nome).each do |aluno| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= aluno.nome %>
          </div>
          <div class="card-body">
            <p class="card-text">Créditos cursados com aprovação: <%= @creditos_cursados[aluno.nome] %> </p>
            <p class="card-text">Coeficiente de rendimento: <%= @coeficiente_rendimento[aluno.nome] %> </p>
            <div>
                <%= link_to "Visualizar grade do aluno", relatorios_grade_path(:id => aluno.id), class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="apple_pagination">
    <%= will_paginate @alunos, :container => false %>
</div>