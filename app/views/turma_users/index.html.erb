<h1 class="text-center mt-4">Turmas matriculadas:</h1>
<div class="row justify-content-md-center">
    <%= link_to "Gerar grade de horários", grade_path, class: "btn btn-info btn-grade"%>
</div>
<div class="container">
  <% @turma_users.each do |tusr| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= tusr.turma.disciplina.nome %>
          </div>
          <div class="card-body">
            <h5 class="card-title" ><%= tusr.turma.horario %></h5>
            <p class="card-text">Vagas: <%= tusr.turma.vagas - tusr.turma.turma_users_count %></p>
            <p> <%= tusr.turma.disciplina.codigo  %> </p>
            <div>
                <%= link_to "Cancelar matrícula", turma_user_path(tusr), class: "btn btn-danger", method: :delete, data: {confirm: "Tem certeza?"} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
