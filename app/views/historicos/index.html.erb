<h1 class="text-center mt-4">Disciplinas já cursadas:</h1>

<div class="apple_pagination">
<div class="page_info">
    <%= page_entries_info @historicos %>
</div>
    <%= will_paginate @historicos, :container => false %>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Nota</th>
      <th scope="col">Aprovado</th>
    </tr>
  </thead>
  <tbody>
  <% @historicos.each do |historico| %>
    <div class="row justify-content-md-center">
      <tr>
        <td><%= historico.disciplina.nome %></td>
        <td><%= historico.nota %></td>
        <td><%= historico.aprovado ? "Sim" : "Não" %></td>
      </tr>
    </div>
  <% end %>
  </tbody>
</table>

<div class="apple_pagination">
    <%= will_paginate @historicos, :container => false %>
</div>