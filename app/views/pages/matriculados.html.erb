<h1 class="text-center mt-4">Alunos matriculados em <%= @nome %> </h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
    </tr>
  </thead>
  <tbody>
  <% @alunos.each_with_index do |aluno, i| %>
    <div class="row justify-content-md-center">
      <tr>
        <td><%= i %></td>
        <td><%= aluno %></td>
      </tr>
    </div>
  <% end %>
  </tbody>
</table>
